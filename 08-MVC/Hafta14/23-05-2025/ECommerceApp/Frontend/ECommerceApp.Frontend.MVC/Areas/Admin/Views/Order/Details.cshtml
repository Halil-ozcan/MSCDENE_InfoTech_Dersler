@model OrderDTO
<div class="page-header">
    <h3 class="fw-bold mb-3">Yeni Kategori</h3>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <table class=" table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Ürün</th>
                        <th>Adet</th>
                        <th>Fiyat</th>
                        <th>Tutar</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (OrderItemDTO orderItem in Model.OrderItems)
                    {
                        <tr>
                            <td>@orderItem.ProductName</td>
                            <td>@orderItem.Quantity</td>
                            <td>@($"{orderItem.UnitPrice:C2}")</td>
                            <td>@($"{orderItem.ItemAmount:C2}")</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td></td>
                        <td></td>
                        <td class="text-success fw-bold">Toplam:</td>
                        <td class="text-danger">@($"{Model.TotalAmount:C2}")</td>
                    </tr>
                </tfoot>
            </table>
        </div>
        <a asp-area="admin" asp-controller="order" asp-action="index" class="btn btn-success">Sipariş Listesine Dön</a>
    </div>
</div>