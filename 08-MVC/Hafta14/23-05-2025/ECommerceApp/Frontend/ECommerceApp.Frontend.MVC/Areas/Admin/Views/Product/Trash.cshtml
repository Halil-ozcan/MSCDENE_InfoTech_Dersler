@model ProductDTO
@{
    ViewData["Title"] = "Trash";
}

<div class="page-header">
    <h3 class="fw-bold mb-3">Ürün Geri Dönüşüm Kutusuna Gönderme</h3>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="alert alert-warning p-5 fs-4">
            <span class="text-danger fw-bold">"@Model.Name"</span> adlı ürünle ilgili ne yapmak istiyorsunuz?
        </div>
        <div class="d-flex gap-2">
            <form asp-area="admin" asp-controller="product" asp-action="trash" asp-route-deletetype="true">
                <input type="hidden" name="Id" value="@Model.Id">
                <button type="submit" class="btn btn-danger">Kalıcı Olarak Sil!</button>
            </form>
            <form asp-area="admin" asp-controller="product" asp-action="trash" asp-route-deletetype="false">
                <input type="hidden" name="Id" value="@Model.Id">
                <button type="submit" class="btn btn-info">Geri Dönüşüm Kutusuna Gönder!</button>
            </form>
            <a asp-area="admin" asp-controller="product" asp-action="index" class="btn btn-success">Ürün Listesine
                Dön</a>
        </div>


    </div>
</div>