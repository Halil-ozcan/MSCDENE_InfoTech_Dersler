<!DOCTYPE html>
<html lang="tr">

<head>
    @await Html.PartialAsync("_HeadPartial")
</head>

<body>
    <!-- Topbar Start -->
    @await Component.InvokeAsync("TopBar")
    <!-- Topbar End -->

    <!-- Navbar Start -->
   @await Component.InvokeAsync("Navbar")
    <!-- Navbar End -->

    @RenderBody();

    <!-- Footer Start -->
    @await Component.InvokeAsync("Footer")
    <!-- Footer End -->

    <!-- Back to Top -->
    @await Html.PartialAsync("_BackToTopPartial")

    <!-- JavaScript Kodları -->
    @await Html.PartialAsync("_ScriptsPartial")
</body>

</html>