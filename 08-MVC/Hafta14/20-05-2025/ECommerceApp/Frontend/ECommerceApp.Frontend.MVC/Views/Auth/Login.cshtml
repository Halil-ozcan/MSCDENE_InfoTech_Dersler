@model LoginDTO
@{
    ViewData["Title"] = "Login";
}
<div class="container-fluid pt-5">
    <div class="w-25 m-auto">
        <h2 class="section-title position-relative text-uppercase mb-4"><span class="bg-secondary pr-3">Giriş Yap</span></h2>
        <form asp-controller="auth" asp-action="login" method="post">
            <div class="mb-3">
                <label asp-for=UserNameOrEmail class="form-label">Kullanıcı Adı ya da Email</label>
                <input asp-for=UserNameOrEmail class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for=Password class="form-label">Parola</label>
                <input asp-for=Password class="form-control">
            </div>
            <button type="submit" class="btn btn-primary">Giriş Yap</button>
        </form>
    </div>

</div>
