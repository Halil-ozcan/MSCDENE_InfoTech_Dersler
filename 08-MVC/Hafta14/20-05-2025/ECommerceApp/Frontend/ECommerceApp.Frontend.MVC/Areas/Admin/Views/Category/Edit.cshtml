
@model CategoryUpdateDTO
<div class="page-header">
    <h3 class="fw-bold mb-3">Yeni Kategori</h3>
</div>

<div class="row">
    <div class="col-md-12">
        <form asp-area="admin" asp-controller="category" asp-action="create" method="post"
            enctype="multipart/form-data">
            <div class="card">

                <div class="form-group">
                    <label asp-for=Name></label>
                    <input asp-for=Name class="form-control" placeholder="Kategori adını yazınız" />
                    <span class="text-danger" asp-validation-for=Name></span>
                </div>
                <div class="form-group">
                    <label asp-for=Description></label>
                    <textarea asp-for=Description class="form-control" rows="5"
                        placeholder="Kategori açıklamasını yazınız"></textarea>
                    <span class="text-danger" asp-validation-for=Description></span>
                </div>
                <div class="form-group">
                    <label asp-for="Image"></label>
                    <input asp-for="Image" class="form-control-file" />
                    <span class="text-danger" asp-validation-for=Image></span>
                    <div>
                        <img id="image-preview" src="http://localhost:5100/images/@ViewBag.ImageUrl"
                            style="max-height: 150px; object-fit:contain;" />
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-success">Değişikleri Kaydet</button>
        </form>
    </div>
</div>





@section Scripts {
    <script>
        document.getElementById("Image").addEventListener('change', function (event) {
            let image = event.target.files[0];
            if (image) {
                let reader = new FileReader();
                reader.onload = function (e) {
                    document.getElementById("image-preview").src = e.target.result;
                }
                reader.readAsDataURL(image);
                console.log(image);
            }
        })
    </script>
}
